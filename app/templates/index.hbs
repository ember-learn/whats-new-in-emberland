<section class="overview-section">
  {{!-- TODO:: Move action to `on` --}}
  {{!-- template-lint-disable no-action --}}
  <button
    class="button"
    type="button"
    {{action "getContributors" bubbles=false}}
  >
    Get Contributors List
  </button>

  {{#if this.contributorsList}}
    <p class="contributors">
      <CopyMe @buttonClass="fetch-contributors">
        {{this.contributorsList}}
      </CopyMe>
    </p>
  {{/if}}
</section>

<section class="overview-section">
  <h2>Pull Requests</h2>

  <h3>Merged This Week</h3>
  <PullRequests @pullRequests={{this.mergedPRs}} />

  <h3>New This Week</h3>
  <PullRequests @pullRequests={{this.newPRs}} />
</section>

<section class="overview-section">
  <h2>RFCs</h2>

  <h3>Merged This Week</h3>
  <PullRequests @pullRequests={{this.mergedRFCs}} />

  <h3>New This Week</h3>
  <PullRequests @pullRequests={{this.newRFCs}} />
</section>