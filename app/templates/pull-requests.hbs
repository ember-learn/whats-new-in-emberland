<section class="overview-section">
  <button
    class="button"
    type="button"
    {{on "click" this.getContributors}}
  >
    Get Contributors List
  </button>

  {{#if this.contributorsList}}
    <p class="contributors">
      <CopyMe @buttonClass="fetch-contributors">
        {{this.contributorsList}}
      </CopyMe>
    </p>
  {{/if}}
</section>

<section class="overview-section">
  <h2>Pull requests since {{this.mergedSince}}</h2>

  <h3>Merged</h3>
  <PullRequests @pullRequests={{this.mergedPRs}} />

  <h3>Updated but not merged</h3>
  <PullRequests @pullRequests={{this.updatedPRs}} />
</section>